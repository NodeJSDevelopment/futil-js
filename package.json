{
  "workspaces": [
    "lib",
    "docs"
  ],
  "scripts": {
    "lint": "eslint 'lib/src/*.js' 'docs/src/*.{js,jsx}'",
    "lint:ci": "npm run lint -- -o lint-results.json -f json",
    "lint:fix": "npm run lint --fix",
    "format": "prettier --write 'lib/src/*.js' 'docs/src/*.{js,jsx}'",
    "danger": "duti",
    "duti:fix": "npm run format && npm run lint:fix && npm run format"
  },
  "devDependencies": {
    "danger": "^6.1.13",
    "duti": "latest",
    "eslint": "^7.12.1",
    "prettier": "^2.1.2"
  },
  "eslintConfig": {
    "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": 2020,
      "ecmaFeatures": {
        "jsx": true
      }
    }
  },
  "prettier": {
    "singleQuote": true,
    "semi": false,
    "trailingComma": "es5",
    "arrowParens": "avoid"
  }
}
